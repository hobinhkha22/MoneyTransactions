<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" id="fix-color">
        <div class="container">
            <div class="navbar-header">
                @Html.ActionLink("Remitano", "Index", "Account", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav remi-header-top-menu">
                    <li>@Html.ActionLink("Example 1", "Index", "Home")</li>
                    <li>@Html.ActionLink("Example 2", "About", "Home")</li>
                    <li>@Html.ActionLink("Example 3", "Contact", "Home")</li>
                    <li>@Html.ActionLink("Đăng nhập / Đăng ký", "Contact", "Home")</li>
                </ul>
            </div>
        </div>
    </div>

    <!-- Container -->
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="alert alert-info" id="div-intro">
                    <p>
                        In order to further protect sellers from fraud attempt,
                        starting Oct 18 2019, Remitano will start apply a withdrawal limit on all account,
                        and increase the limit on a daily basis for each account based on verification level.
                        Please beware of this when you schedule to buy a large amount of coin on remitano.
                    </p>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xs-12 container">
        <div class="row" id="render-body">
            @RenderBody()
            <p>asdsadadad</p>
            <p>asdsadadad</p>
        </div>
    </div>



    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")    
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" id="fix-color">
        <div class="container">
            <div class="navbar-header">               
                @Html.ActionLink("Remitano", "Index", "Account", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav remi-header-top-menu">
                    <li>@Html.ActionLink("Example 1", "Index", "Home")</li>
                    <li>@Html.ActionLink("Example 2", "About", "Home")</li>
                    <li>@Html.ActionLink("Example 3", "Contact", "Home")</li>
                    <li>@Html.ActionLink("Example 4", "Contact", "Home")</li>
                    <li>@Html.ActionLink("Example 5", "Contact", "Home")</li>
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

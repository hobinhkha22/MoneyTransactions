
@{
    ViewBag.Title = "Tạo quảng cáo bán";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="page-heading remi-heading">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="title">
                    <strong style="color: white;">Tạo quảng cáo bán mới</strong>
                </div>
            </div>
        </div>
    </div>
</section>

<div class="container">
    <div class="box-body text-left" style="padding-top: 30px;padding-bottom: 30px;">
        <form class="form" name="form">
            <div class="form-group coin-selector-wrapper">
                <label>Change coin</label>
                <div class="row">
                    <div class="col-sm-7">
                        <select class="form-control coin-selector">
                            <option value="btc" class="btc">Bitcoin</option>
                            <option value="eth" class="eth">Ethereum</option>
                            <option value="xrp" class="xrp">Ripple</option>
                        </select>
                    </div>
                </div>
            </div>
            <hr>
            <div class="offer-details">
                <h4>Giá</h4>
                <div class="offer-extra-fields">
                    <div class="form-group price">
                        <div class="row">
                            <div class="col-md-7">
                                <div class="row">
                                    <div class="col-sm-5 col-xs-7"><label>Giá bitUSD</label></div>
                                    <div class="col-sm-4 text-right col-xs-5 value">
                                        <strong>23,307.81 VND / bitUSD</strong>
                                    </div>
                                    <div class="col-sm-3 text-left col-xs-12 text-xs-right">
                                        <a class="btn-change">
                                            Thay đổi
                                        </a>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-5"><span class="explanation">Giá 1 bitUSD theo VND</span></div>
                        </div>
                    </div>
                    <div class="form-group" data-ng-if="$root.coin_currency != 'usdt'">
                        <div class="form-group price-for-maker">
                            <div class="row">
                                <div class="col-md-7">
                                    <div class="row">
                                        <div class="col-sm-5 col-xs-6">
                                            <label><span>Giá Bitcoin bạn thực trả</span></label>
                                        </div>
                                        <div class="col-sm-4 text-right col-xs-6 text-xs-right">
                                            <strong>
                                                188,353,724 / BTC
                                            </strong>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-5">
                                    <span class="explanation">
                                        <span>
                                            Đây là giá tương ứng với tỉ giá
                                            Bitstamp BTC hiện tại (<strong class="text-primary">8081.14</strong>). Giá sẽ biến động khi tỉ giá Bitstamp BTC thay đổi.
                                        </span>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <hr>
            <div class="offer-details payment-section">
                <h4>Thông tin thanh toán</h4>
                <div class="offer-extra-fields">
                    <div class="form-group payment_method">
                        <div class="row">
                            <div class="col-md-7">
                                <div class="row">
                                    <div class="col-sm-5 col-xs-7"><label>Phương thức thanh toán</label></div>
                                    <div class="col-sm-4 text-right col-xs-5 value">
                                        <strong>Chuyển khoản ngân hàng</strong>
                                    </div>
                                    <div class="col-sm-3 text-left col-xs-12 text-xs-right">
                                        <a class="btn-change">
                                            Thay đổi
                                        </a>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-5"><span class="explanation"></span></div>
                        </div>
                    </div>
                    <div class="offer-details">
                        <div class="local-bank-payment-details">
                            <div class="form-group bank_name has-feedback">
                                <label>Tên ngân hàng</label>
                                <div class="row">
                                    <div class="col-sm-7">
                                        <div class="remi-colorized-field has-success">
                                            <select class="ui-select-container form-control" id="bank_name"
                                                    name="payment_details.bank_name">
                                                <option></option>
                                                <option value="ACB (Ngân hàng Á Châu)">ACB (Ngân hàng Á Châu)</option>
                                                <option value="DongA Bank">DongA Bank</option>
                                                <option value="Vietinbank">VietAbank</option>
                                                <option value="Vietinbank">VietcapitalBank</option>
                                                <option value="Agribank">Agribank</option>
                                                <option value="TP Bank">TP Bank</option>
                                                <option value="Sacombank">Sacombank</option>
                                                <option value="Vietcombank">Vietcombank</option>
                                                <option value="NamABank">NamABank</option>
                                                <option value="ABBank">ABBank</option>
                                            </select>
                                            <div></div>
                                        </div>
                                    </div>
                                    <div class="col-sm-5"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group"><button type="submit" class="btn-save-offer btn btn-primary">Tạo</button></div>
        </form>
    </div>
</div>
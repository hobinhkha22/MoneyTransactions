@model MoneyTransactions.Entities.Account

@{
    ViewBag.Title = "Your Wallet";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="page-heading remi-heading">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="title">
                    <strong style="color: white;">Ví tiền</strong>
                </div>
            </div>
        </div>
    </div>
</section>



<div class="main">
    <section class="container profile">
        <br>
        <div class="row">
            <div class="col-md-6">
                <div class="loading-container text-center">
                    <div class="loading-bar"></div>
                </div>
                <div class="panel panel-default profile-details">
                    <table class="table table-striped">
                        <tbody>

                            @foreach (var item in Model.Wallets)
                            {
                                <!-- Ripple -->
                                <tr>
                                    <td>
                                        @{
                                            if (@item.CryptocurrencyStore.MoneyType == MoneyTransactions.Common.CryptoCurrencyCommon.Bitcoin)
                                            {
                                                <text>
                                                    Bitcoin(BTC)
                                                </text>
                                            }
                                            if (@item.CryptocurrencyStore.MoneyType == MoneyTransactions.Common.CryptoCurrencyCommon.Ethereum)
                                            {
                                                <text>
                                                    Ethereum(ETH)
                                                </text>
                                            }
                                            if (@item.CryptocurrencyStore.MoneyType == MoneyTransactions.Common.CryptoCurrencyCommon.Ripple)
                                            {
                                                <text>
                                                    Ripple(XRP)
                                                </text>
                                            }
                                            if (@item.CryptocurrencyStore.MoneyType == MoneyTransactions.Common.CryptoCurrencyCommon.VietnamDong)
                                            {
                                                <text>
                                                    Việt Nam Đồng(VNĐ)
                                                </text>
                                            }
                                        }

                                    </td>
                                    <td>
                                        @item.BalanceAmount
                                    </td>
                                    <td>
                                        @Html.ActionLink("Nạp tiền", "DepositFromBank", "Bank", new { accountID = @item.AccountID, isType = @item.CryptocurrencyStore.MoneyType }, new { @class = "btn btn-success", @target = "_blank" })
                                    </td>
                                    <td>
                                        @Html.ActionLink("Rút tiền", "WithdrawToBank", "Bank", new { accountID = @item.AccountID, isType = @item.CryptocurrencyStore.MoneyType }, new { @class = "btn btn-danger", @target = "_blank" })
                                    </td>
                                </tr>
                            }


                        </tbody>
                    </table>
                </div>
            </div>

            <div class="col-md-6" hidden>
                <div class="feedback-contents text-center">
                    <div class="feedback-title title-accent">
                        <h3><span>Phản hồi về bluebox</span></h3>
                    </div>
                    <div class="loading-container text-center">
                        <div class="loading-bar"></div>
                    </div>
                    <div class="empty-feedbacks">
                        <i>Không có phản hồi</i>
                        <p></p>
                    </div>
                </div>
            </div>
        </div>

        <div class="row profile-offers my-16" hidden>
            <div class="col-xs-12">
                <div class="sell-offers offer-list-section mb-24">
                    <div class="title-accent heading-03">
                        <span>
                            <span class="vertical-middless">Mua từ @Model.UserName</span>
                        </span>
                    </div>
                    <div class="loading-container text-center">
                        <div class="loading-bar"></div>
                    </div>
                    <div class="content-wrapper mt-16">
                        <div class="main-container container-fluid">
                            <div class="row no-offers pt-0 pb-16 px-16">
                                <div class="col-xs-12"><i></i></div>
                            </div>
                        </div>
                    </div>
                </div>
                <hr>
                <div class="buy-offers offer-list-section mb-24">
                    <div class="title-accent heading-03">
                        <span>
                            <span class="vertical-middless">Bán cho @Model.UserName</span>
                        </span>
                    </div>
                    <div class="loading-container text-center">
                        <div class="loading-bar"></div>
                    </div>
                    <div class="content-wrapper mt-16">
                        <div class="main-container container-fluid">
                            <div class="row no-offers pt-0 pb-16 px-16">
                                <div class="col-xs-12"><i></i></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>


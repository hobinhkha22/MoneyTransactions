
@{
    ViewBag.Title = "Your Wallet";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="page-heading remi-heading">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="title">
                    <strong style="color: white;">Ví tiền</strong>
                </div>
            </div>
        </div>
    </div>
</section>



<div class="main">
    <section class="container profile">
        <br>
        <div class="row">
            <div class="col-md-6">
                <div class="loading-container text-center">
                    <div class="loading-bar"></div>
                </div>
                <div class="panel panel-default profile-details">
                    @*<div class="panel-heading"><span>Nạp tiền</span></div>*@
                    <table class="table table-striped">
                        <tbody>

                            <!-- Bitcoin -->
                            <tr>
                                <td>Bitcoin (BTC)</td>
                                <td>
                                    @ViewBag.yourBitcoin
                                </td>
                                <td>
                                    <a class="btn btn-success">Nạp tiền</a>
                                </td>
                                <td>
                                    <a class="btn btn-danger">Rút tiền</a>
                                </td>
                            </tr>

                            <!-- Ethereum -->
                            <tr>
                                <td>Ethereum (ETH)</td>
                                <td>
                                    @ViewBag.yourEthereum
                                </td>
                                <td>
                                    <a class="btn btn-success">Nạp tiền</a>
                                </td>
                                <td>
                                    <a class="btn btn-danger">Rút tiền</a>
                                </td>
                            </tr>


                            <!-- Ripple -->
                            <tr>
                                <td>Ripple (XRP)</td>
                                <td>
                                    @ViewBag.yourRipple
                                </td>
                                <td>
                                    <a class="btn btn-success">Nạp tiền</a>
                                </td>
                                <td>
                                    <a class="btn btn-danger">Rút tiền</a>
                                </td>
                            </tr>


                          
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="col-md-6" hidden>
                <div class="feedback-contents text-center">
                    <div class="feedback-title title-accent">
                        <h3><span>Phản hồi về bluebox</span></h3>
                    </div>
                    <div class="loading-container text-center">
                        <div class="loading-bar"></div>
                    </div>
                    <div class="empty-feedbacks">
                        <i>Không có phản hồi</i>
                        <p></p>
                    </div>
                </div>
            </div>
        </div>

